<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id='estate_property_tree_view' model ='ir.ui.view'>
        <field name='name'>estate.property.tree</field>
        <field name='model'>estate.property</field>
        <field name='arch' type='xml'>
            <tree>
                <field name='name'/>
                <field name='expected_price'/>
                <field name='selling_price'/>
                <field name='date_availability'/>
            </tree>
        </field> 
    </record>

    <record id='estate_property_form_view' model ='ir.ui.view'>
        <field name='name'>estate.property.form</field>
        <field name='model'>estate.property</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group>
                        <field name='name'/>
                        <field name='estate_property_type_id'/>
                        <field name='expected_price'/>
                        <field name='selling_price'/>
                        <field name='date_availability'/>
                        <field name='buyer_id'/>
                        <field name='employee_id'/>
                        <field name='property_tag_id' widget='many2many_tags'/>
                    </group>
                    <notebook>
                        <page string="page name">
                            <group>
                                <group>
                                    <field name='name'/>
                                    <field name='bedrooms'/>
                                </group>
                                <group>
                                    <field name='facades'/>
                                    <field name='living_area'/>
                                    <field name='name'/>
                                </group>
                                <group>
                                    <field name='expected_price'/>
                                    <field name='selling_price'/>
                                    <field name='garage'/>
                                </group>
                            </group>
                        </page>
                        <page string="description">
                            <group>
                                <group>
                                    <field name='name'/>
                                    <field name='description'/>
                                </group>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name='offers_ids'/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field> 
    </record>

    <record id='estate_property_form_search' model ='ir.ui.view'>
        <field name='name'>estate.property.search</field>
        <field name='model'>estate.property</field>
        <field name='arch' type='xml'>
            <search>
                <field name='name'/>
                <field name='postcode'/>
                <field name='expected_price'/>
                <field name='bedrooms'/>
                <field name='facades'/>
                <field name='living_area'/>
                <filter name="Garage Available" string="Garage" domain="[('garage','=',True)]"/>
                <filter name="More than 10Rs" domain="[('expected_price','>',10)]"/>
                <group expand="0" string="Group By">
                    <filter string="Bedrooms" name="Bedroomsz" context="{'group_by':'bedrooms'}"/>
                    <filter string="Gardenz" name='garden' context="{'group_by':'garden'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id='estate_books_tree_view' model ='ir.ui.view'>
        <field name='name'>estate.books.tree</field>
        <field name='model'>estate.books</field>
        <field name='arch' type='xml'>
            <tree>
                <field name='name'/>
                <field name='description'/>
                <field name='isbn'/>
                <field name='date_published'/>
            </tree>
        </field> 
    </record>

    <record id='estate_property_offers_tree_view' model ='ir.ui.view'>
        <field name='name'>estate.property.offers.tree</field>
        <field name='model'>estate.property.offers</field>
        <field name='arch' type='xml'>
            <tree>
                <field name='name'/>
                <field name='offer_person'/>
                <field name='property_id'/>
                <field name='price'/>
                <field name='offer_status'/>
            </tree>
        </field> 
    </record>

    <record id='estate_property_offer_form_view' model ='ir.ui.view'>
        <field name='name'>estate.property.offers.form</field>
        <field name='model'>estate.property.offers</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group>
                        <field name='name'/>
                        <field name='offer_person'/>
                        <field name='property_id'/>
                        <field name='price'/>
                        <field name='offer_status'/>
                        <field name='offer_date'/>
                    </group>
                </sheet>
            </form>
        </field> 
    </record>
    
</odoo>